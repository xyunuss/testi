{%- assign contact_form_id = 'ContactForm-' | append: section.id -%}

{%- form 'contact', id: contact_form_id, class: 'contact-form' -%}
    {%- if form.posted_successfully? -%}
        <div class="form-message hidden" data-form-message="contact">
            <div class="alertBox alertBox--success">
                <p class="alertBox-message">
                    {{ 'templates.contact.form.post_success' | t }}
                </p>
            </div>
        </div>
    {%- elsif form.errors -%}
        <div class="form-message hidden" data-form-message="contact">
            <div class="alertBox alertBox--error">
                <p class="alertBox-message">
                    <ul>
                        {% for field in form.errors %}
                            <li>
                                {{ form.errors.translated_fields[field] | capitalize }} - {{ form.errors.messages[field] }}
                            </li>
                        {% endfor %}
                    </ul>
                </p>
            </div>
        </div>
    {%- else -%}
    {%- if contact_form_text != blank -%}
        <div class="contact-text links-underline">
            {{ contact_form_text }}
        </div>
    {%- endif %}
    <div class="form-field">
        <label class="form-label hidden" for="contactFormName-{{ section.id }}">
            {{ 'templates.contact.form.name' | t }}
        </label>
        <input class="form-input form-input-placeholder"
            type="text"
            id="contactFormName-{{ section.id }}"
            name="contact[name]"
            autocomplete="name"
            autocapitalize="words"
            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            placeholder="{{ 'templates.contact.form.name' | t }}"
            aria-required="false"
        >
    </div>
    <div class="form-field{% if form.errors contains "email" %} form-field--error{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
        <label class="form-label hidden" for="contactFormEmail-{{ section.id }}">
            {{ 'templates.contact.form.email' | t }} <span class="red-asterisk">*</span>
        </label>
        <input class="form-input form-input-placeholder{% if form.errors contains "email" %} error{% endif %}"
            type="email"
            name="contact[email]"
            id="contactFormEmail-{{ section.id }}"
            spellcheck="false"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            aria-required="true"
            {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
            {% endif %}
            placeholder="{{ 'templates.contact.form.email' | t }}"
            required
        >
    </div>
    {%  comment %}
        <div class="form-field">
        <label class="form-label hidden" for="ContactFormPhone-{{ section.id }}">
            {{ 'templates.contact.form.phone' | t }}
        </label>
        <input class="form-input form-input-placeholder"
            type="tel"
            id="ContactFormPhone-{{ section.id }}"
            name="contact[phone]"
            autocomplete="tel"
            pattern="[0-9]*"
            value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            placeholder="{{ 'templates.contact.form.phone' | t }}"
            aria-required="false"
        >
    </div>
     {% endcomment %} 
    <div class="form-field">
        <label class="form-label hidden" for="ContactFormOrderId-{{ section.id }}">
            {{ 'templates.contact.form.order_id' | t }}
        </label>
        <input class="form-input form-input-placeholder"
            type="text"
            id="ContactFormOrderId-{{ section.id }}"
            name="contact[order_id]"
            value="{% if form.order_id %}{{ form.order_id }}{% endif %}"
            placeholder="{{ 'templates.contact.form.order_id' | t }}"
            aria-required="false"
        >
    </div>
    <div class="form-field">
        <label class="form-label hidden" for="contactFormMessage-{{ section.id }}">
            {{ 'templates.contact.form.comment' | t }}  <span>*</span>
        </label>
        <textarea class="form-input form-input-placeholder" rows="8" name="contact[body]" id="contactFormMessage-{{ section.id }}" 
            placeholder="{{ 'templates.contact.form.comment' | t }}"
            aria-required="true"
            aria-invalid="true"
            required
        >
            {{- form.body -}}
        </textarea>
    </div>
    <div class="form-actions">
        {%- if contact_form_text_privacy != blank -%}
             <label class="contact_form_text_privacy">
               <input
                 type="checkbox"
                 required
                 class="input_replaced web3000-newsletter-form__field field-input web3000-newsletter-form__agree"
                 value="1"
                 id="OPT_IN_CONTACT"
                 name="OPT_IN_CONTACT" />
               <span class="web3000-newsletter-form__agree-span"></span>
               <span class="links-underline">
                 <p>{{ contact_form_text_privacy }}</p>
               </span>
             </label>
        {%- endif -%}
        <input type="submit" class="button button--primary" value="{{ 'templates.contact.form.send' | t }}" role="button" data-button-message="contact" disabled>
    </div>
    {%- if contact_form_text_2 != blank -%}
        <div class="contact-text links-underline">
            {{ contact_form_text_2 }}
        </div>
    {%- endif %}
    {%- endif -%}
{%- endform -%}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('{{ contact_form_id }}');
    const emailInput = document.getElementById('contactFormEmail-{{ section.id }}');
    const messageInput = document.getElementById('contactFormMessage-{{ section.id }}');
    const checkbox = document.getElementById('OPT_IN_CONTACT');
    const submitButton = form.querySelector('input[type="submit"]');

    function validateEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(email);
    }

    function validateForm() {
      const isEmailValid = validateEmail(emailInput.value.trim());
      const isValid = isEmailValid && 
                      messageInput.value.trim() !== '' && 
                      checkbox.checked;
      submitButton.disabled = !isValid;
    }

    emailInput.addEventListener('input', validateForm);
    messageInput.addEventListener('input', validateForm);
    checkbox.addEventListener('change', validateForm);

    validateForm();
  });
</script>
