{{ 'web3000-three-col-image-section.css' | asset_url | stylesheet_tag: preload: true }}

<div class="web3000-three-col-image-section wrap">
    <div class="web3000-three-col-image">
        <div class="web3000-three-col-image__column entry-content">
            {% if section.settings.image %}
                <div class="relative">     
                 {% if section.settings.link %}
                        <a href="{{ section.settings.link }}" class="web3000-three-col-image__link">
                {% endif %}
                    {% render 'image', image: section.settings.image, class_name: 'web3000-three-col-image__image' %}
                    {% if section.settings.text %}
                        <div class="web3000-three-col-image__text {% if section.settings.text_black %} text-black{% endif %}">
                            {{ section.settings.text }}
                        </div>
                    {% endif %}    
                    {% if section.settings.link %}
                        </a>
                    {% endif %}
                </div>
            {% elsif section.settings.text %}
                <div class="web3000-three-col-image__text-only">
                    <div class="web3000-three-col-image__text-only--inner">
                        {{ section.settings.text }}
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="web3000-three-col-image__column">
            {% if section.settings.image_2 %}
                <div class="relative">     
                    {% if section.settings.link_2 %}
                        <a href="{{ section.settings.link_2 }}" class="web3000-three-col-image__link">
                    {% endif %}
                        {% render 'image', image: section.settings.image_2, class_name: 'web3000-three-col-image__image' %}
                        {% if section.settings.text_2 %}
                            <div class="web3000-three-col-image__text {% if section.settings.text_black_2 %} text-black{% endif %}">
                                {{ section.settings.text_2 }}
                            </div>
                        {% endif %}    
                    {% if section.settings.link_2 %}
                        </a>
                    {% endif %}
                </div>
            {% elsif section.settings.text_2 %}
                <div class="web3000-three-col-image__text-only">
                    <div class="web3000-three-col-image__text-only--inner">
                        {{ section.settings.text_2 }}
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="web3000-three-col-image__column">
            {% if section.settings.image_3 %}
                <div class="relative">     
                    {% if section.settings.link_3 %}
                        <a href="{{ section.settings.link_3 }}" class="web3000-three-col-image__link">
                    {% endif %}
                        {% render 'image', image: section.settings.image_3, class_name: 'web3000-three-col-image__image' %}
                        {% if section.settings.text_3 %}
                            <div class="web3000-three-col-image__text {% if section.settings.text_black_3 %} text-black{% endif %}">
                                {{ section.settings.text_3 }}
                            </div>
                        {% endif %}    
                    {% if section.settings.link_3 %}
                        </a>
                    {% endif %}
                </div>
            {% elsif section.settings.text_3 %}
                <div class="web3000-three-col-image__text-only">
                    <div class="web3000-three-col-image__text-only--inner">
                        {{ section.settings.text_3 }}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "web3000 Three Columns",
        "class": "web3000-three-col-block",
        "tag": "section",
        "settings": [
            {
                "type": "header",
                "content": "Column I"
            },
          
            {
                "type": "image_picker",
                "id": "image",
                "label": "t:sections.image-banner.blocks.image.settings.image.label__1",
                "info": "t:sections.image-banner.blocks.image.settings.image.info_1"
            },
            {
                "type": "checkbox",
                "id": "text_black",
                "label": "Black Text Color", 
                "default": false
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Rich Text Content"
            },
            {
                "type": "url",
                "id": "link",
                "label": "Link",
                "info": "Add a link to wrap the entire section"
            },
            {
            "type": "header",
            "content": "Column II"    
            },
            {
                "type": "image_picker",
                "id": "image_2",
                "label": "t:sections.image-banner.blocks.image.settings.image.label__1",
                "info": "t:sections.image-banner.blocks.image.settings.image.info_1"
            },
            {
                "type": "checkbox",
                "id": "text_black_2",
                "label": "Black Text Color", 
                "default": false
            },
            {
                "type": "richtext",
                "id": "text_2",
                "label": "Rich Text Content"
            },
            {
                "type": "url",
                "id": "link_2",
                "label": "Link",
                "info": "Add a link to wrap the entire section"
            },
            {
            "type": "header",
            "content": "Column III"    
            },
            {
                "type": "image_picker",
                "id": "image_3",
                "label": "t:sections.image-banner.blocks.image.settings.image.label__1",
                "info": "t:sections.image-banner.blocks.image.settings.image.info_1"
            },
            {
                "type": "checkbox",
                "id": "text_black_3",
                "label": "Black Text Color", 
                "default": false
            },
            {
                "type": "richtext",
                "id": "text_3",
                "label": "Rich Text Content"
            },
            {
                "type": "url",
                "id": "link_3",
                "label": "Link",
                "info": "Add a link to wrap the entire section"
            }
        ],
        "presets": [{
            "name": "web3000 Three Columns"
        }]
    }
{% endschema %}