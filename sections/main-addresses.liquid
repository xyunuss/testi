{% comment %}
    This template will be automatically generated for you if the file doesn't exist,
    but where's the fun in having no control? Define your layout below.

    The 'layout settings.customer_layout' line is inserted at the top of every customer account template.
    Your theme's settings determine to use the 'default' or 'theme' customer templates.
    More info:
    - http://www.tetchi.ca/shopify-theme-from-scratch-part-11/

    Template note:
    - All IDs on this template are required to make the form(s) submit properly
    - There are two instances of inline JS below. Best practices advise separating this
      into an external JS file
    - There are separate 'add new' and 'edit' address forms
{% endcomment %}

{{ 'customer.css' | asset_url | stylesheet_tag }}
{{ 'web3000-addresses.css' | asset_url | stylesheet_tag }}
{{ 'web3000-account.css' | asset_url | stylesheet_tag }}
{{ 'web3000-button.css' | asset_url | stylesheet_tag }}
{{ 'web3000-form.css' | asset_url | stylesheet_tag }}


{%- liquid
    assign container = section.settings.container
    assign padding_full_width = section.settings.padding_full_width
-%}

<script src="{{ 'customer.js' | asset_url }}" defer></script>

<div class="account-page addresses-page">
    <div class="container">
        <div class="web3000-account-header">
            <h1 >
                {{ 'web3000.account_sign_in' | t }}
            </h1>
             <div>
                <a href="{{ routes.account_url }}" class="link back-account link-underline web3000-account-back">
                    <span class="text">{{ 'customer.account.return' | t }}</span>
                </a>
            </div>
        </div>
        <div class="halo-page-content">
            <customer-addresses class="account" data-customer-addresses>
                <div class="account-body">
                    {%- paginate customer.addresses by 5 -%}
                        <div class="account-item">
                            <div class="account-content login-row web3000-address-page-grid clearfix">
                                <div class="col-1 login-rowItem login-rowLeft">
                                    <button
                                        class="web3000-button web3000-button--large web3000-button--add-new-address web3000-button--login hide-mobile"
                                        type="button"
                                        aria-expanded="false"
                                        aria-controls="AddAddress"
                                        onclick="Shopify.CustomerAddress.toggleForm('AddAddress'); return false;"
                                    >
                                        {{ 'customer.addresses.add_new' | t }}
                                    </button>

                                    <h2 class="address-title text-left">
                                      {{ 'customer.addresses.address_book' | t }}
                                    </h2>

                                      
                                    <ul class="list-unstyled web3000-addresses-max-w" role="list">
                                        {%- for address in customer.addresses -%}
                                            <li data-address class="web3000-addresses-list-item  {% if address == customer.default_address %}
                                                web3000-addresses-list-item--default
                                                      {% endif %}"> 
                                                   {% if address == customer.default_address %}
                                                        <div class="web3000-button web3000-button--small web3000-default-address">{{ 'customer.addresses.default' | t }}</div>
                                                      {% endif %}
                                                <address class="address-content">
                                                  <h5 class="acc-name">
                                                {{ address.first_name | uppercase }} {{ address.last_name | uppercase }}
                                                </h5>
                                                <div class="cus-addr">
                                                {% assign address_parts = "" %}
                                                
                                                {% if address.company %}
                                                    {% assign address_parts = address_parts | append: address.company %}
                                                {% endif %}
                                                {% if address.street %}
                                                    {% if address_parts != "" %}
                                                    {% assign address_parts = address_parts | append: ", " %}
                                                    {% endif %}
                                                    {% assign address_parts = address_parts | append: address.street %}
                                                {% endif %}
                                                {% if address.city %}
                                                    {% if address_parts != "" %}
                                                    {% assign address_parts = address_parts | append: ", " %}
                                                    {% endif %}
                                                    {% assign address_parts = address_parts | append: address.city | capitalize %}
                                                {% endif %}
                                                {% if address.province_code %}
                                                    {% if address_parts != "" %}
                                                    {% assign address_parts = address_parts | append: ", " %}
                                                    {% endif %}
                                                    {% assign address_parts = address_parts | append: address.province_code | upcase %}
                                                {% endif %}
                                                {% if address.zip %}
                                                    {% if address_parts != "" %}
                                                    {% assign address_parts = address_parts | append: ", " %}
                                                    {% endif %}
                                                    {% assign address_parts = address_parts | append: address.zip | upcase %}
                                                {% endif %}
                                                {% if address.country %}
                                                    {% if address_parts != "" %}
                                                    {% assign address_parts = address_parts | append: ", " %}
                                                    {% endif %}
                                                    {% assign address_parts = address_parts | append: address.country %}
                                                {% endif %}
                                              
                                                
                                                {{ address_parts | strip }}
                                                </div>

                                                     <div class="cus-addr">
                                                        {{ address.phone }}
                                                      </div>

                                                </address>
                                                <div class="web3000-address-wrapper">
                                                    <button
                                                        class="web3000-button web3000-button--large"
                                                        type="button"
                                                        id="EditFormButton_{{ address.id }}"
                                                        onclick="Shopify.CustomerAddress.toggleForm({{ address.id }}); return false;"
                                                        aria-label="{{ 'customer.addresses.edit_address' | t }} {{ forloop.index }}"
                                                        aria-controls="EditAddress_{{ address.id }}"
                                                        aria-expanded="false"
                                                        data-address-id="{{ address.id }}"
                                                    >
                                                        {{ 'customer.addresses.edit' | t }}
                                                    </button>
                                                    <button
                                                        class="web3000-button web3000-button--large button-delete web3000-button--white"
                                                        type="button"
                                                        aria-label="{{ 'customer.addresses.delete' | t }} {{ forloop.index }}"
                                                        data-target="{{ address.url }}"
                                                        data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
                                                    >
                                                        {{ 'customer.addresses.delete' | t }}
                                                    </button>
                                                </div>
                                            </li>
                                        {%- endfor -%}
                                    </ul>
                                </div>

                                <div class="address-new login-rowItem login-rowRight login-rowItem-address" data-address >
